g_nv = gamma_score_eval(load_pkl_dict(f"oscr_data_base_1_1_-1_ABS_REV_ACTV_NORM-WEIGHTS.pkl"))
g_vs =  gamma_score_eval(load_pkl_dict(f"oscr_data_base_1_1_-1_VALUE_SHIFT_NORM-WEIGHTS.pkl"))
